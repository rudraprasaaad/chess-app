{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",

    /* Modules */
    "module": "node16",
    "rootDir": "./src",
    "moduleResolution": "node16", // <-- 1. UPDATED: Use a modern resolution strategy

    // "typeRoots": [ ... ], // <-- 2. REMOVED: This is preventing discovery

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  // --- 3. UPDATED: Explicitly include your custom declaration file ---
  "include": ["src/**/*"],
  "files": ["src/stockfish.d.ts"],
  "exclude": ["dist"]
}
