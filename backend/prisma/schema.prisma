generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String       @id @default(uuid())
  username String?      @unique
  name     String?
  email    String       @unique
  provider AuthProvider
  password String?
}

enum AuthProvider {
  EMAIL
  GOOGLE
  GITHUB
  GUEST
}
